{
  "compilerOptions": {
    // ECMAScript target version (Airbnb prefers modern targets)
    "target": "ES2020",
    // Standard library includes
    "lib": ["dom", "dom.iterable", "esnext"],
    // Module configurations
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    // Strict Type Checking (Airbnb recommends strict checks)
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    // Additional Type Checking (Recommended by Airbnb)
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    // Next.js specific configurations (keep these unchanged)
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    // Path aliases
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    // Next.js plugin
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["jest", "node"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "jest.config.js",
    "jest.setup.js"
  ],
  "exclude": ["node_modules"]
}
